<p id="notice"><%= notice %></p>

<h1>Concierts</h1>

<table>
  <thead>
    <tr>
      <th>People</th>
      <th>Duration</th>
      <th>Date</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concierts.each do |conciert| %>
      <tr>
        <td><%= conciert.people %></td>
        <td><%= conciert.duration %></td>
        <td><%= conciert.date %></td>
        <td><%= conciert.group_id %></td>
        <td><%= link_to 'Show', conciert %></td>
        <td><%= link_to 'Edit', edit_conciert_path(conciert) %></td>
        <td><%= link_to 'Destroy', conciert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

