<p id="notice"><%= notice %></p>

<h1>Concierts</h1>

<table>
  <thead>
    <tr>
      <th>People</th>
      <th>Duration</th>
      <th>Date</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concierts.each do |conciert| %>
      <tr>
        <td><%= conciert.people %></td>
        <td><%= conciert.duration.strftime("%Hh:%Mm") %></td>
        <td><%= conciert.date %></td>
        <td><%= conciert.get_group_name %></td>
        <td><%= link_to 'Show', group_conciert_path(@group, conciert) %></td>
        <td><%= link_to 'Edit', edit_group_conciert_path(@group, conciert) %></td>
        <td><%= link_to 'Destroy', group_conciert_path(@group, conciert), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', group_path(@group) %>
<%= link_to 'New Conciert', new_group_conciert_path(@group) %>
